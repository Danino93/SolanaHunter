# SolanaHunter Configuration
# Copy this file to .env and fill in your values

# ============================================
# Solana RPC & APIs
# ============================================
HELIUS_API_KEY=your_helius_api_key_here
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key={HELIUS_API_KEY}

# ============================================
# Database (Supabase)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ============================================
# Telegram Bot API
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Wallet (⚠️ DEDICATED BOT WALLET ONLY!)
# ============================================
WALLET_PRIVATE_KEY=your_private_key_base58_here

# ============================================
# AI Services (Optional - for future)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# ============================================
# Bot Configuration
# ============================================
LOG_LEVEL=INFO
SCAN_INTERVAL_SECONDS=300
ALERT_THRESHOLD=85
MAX_POSITION_SIZE_PCT=5
STOP_LOSS_PCT=15

# ============================================
# External APIs (Optional)
# ============================================
BIRDEYE_API_KEY=your_birdeye_key_here
SOLSCAN_API_KEY=your_solscan_key_here
